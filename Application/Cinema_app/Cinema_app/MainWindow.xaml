<Window x:Class="Cinema_app.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Cinema_app"
        mc:Ignorable="d"
        Title="Logowanie" Height="300" Width="300" Background="Blue">

    <Border Background="Black" CornerRadius="20" Margin="20">
        <StackPanel Margin="20">
            <Label Content="Logowanie" Foreground="White" FontSize="25" HorizontalAlignment="Center"/>
            <Separator></Separator>
            <Label Content="Email" Foreground="White"></Label>
            <TextBox Name="txtEmail" Background="White" Foreground="Black" FontSize="10"/>
            <Label Content="Hasło" Foreground="White"></Label>
            <PasswordBox Name="txtpassword" Background="White" Foreground="Black" FontSize="10"/>
            <Button Name="btnZaloguj" Click="btnZaloguj_Click_1" Content="Zaloguj" Margin="60 20" Background="Pink" Foreground="Black" FontSize="10"/>
        </StackPanel>
    </Border>

</Window>
